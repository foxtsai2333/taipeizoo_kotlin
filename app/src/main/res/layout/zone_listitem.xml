<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/zone_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/zone_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/placeholder_cat"
            android:scaleType="centerCrop"
            android:contentDescription="zone img"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/zone_title_text"
            tools:text="兩棲爬蟲動物館"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/zone_image"
            android:layout_toStartOf="@id/arrow_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toStartOf="@id/arrow_icon"
            android:layout_toEndOf="@id/zone_image"
            android:layout_above="@id/zone_item_divider"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tools:text="(一) 每日09:00~17:00。 (二) 週六、寒暑假期間及連續假期(除收假日外)延長營運至20:00。(三) 週日或連續假期收假日延長營運至18:00。(四) 農曆除夕為休園日不對外開放。(五) 營運時間如有調整將另行公告。"
            android:id="@+id/zone_open_hour_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/zone_desc_text"
            android:layout_toEndOf="@id/zone_image"
            android:layout_toStartOf="@id/arrow_icon"
            android:layout_below="@id/zone_title_text"
            android:layout_above="@id/zone_open_hour_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:textSize="14sp"
            tools:text="臣亮言：先帝創業未半，而中道崩殂，今天下三分，益州疲弊，此誠危急存亡之秋也。"
            android:ellipsize="end"/>

        <RelativeLayout
            android:id="@+id/arrow_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/right_arrow"/>

        <RelativeLayout
            android:layout_below="@id/zone_image"
            android:layout_marginTop="10dp"
            android:id="@+id/zone_item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc">

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
